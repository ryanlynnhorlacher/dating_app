<h1><%= @person.name%>'s Address is:</h1>

<% if @address.blank? %>
<h3> No address. Please add an address </h3>
  <%= link_to 'Add Address', new_person_address_path(@person) %>
<% else %>
   <h3> <%= @address.street_address %> </h3>
   <h3> <%= @address.city + ", " + @address.state %>
   <h3> <%= @address.zip %> </h3>
<% if @person == Person.user %>
	<%= link_to "Edit", edit_person_address_path(@person, @address) %>
	<br/>
	<%= link_to 'DELETE', person_address_path(@person, @address), method: :delete, data: {confirm: 'Are You Sure?'}%>
	<% end %>
<% end %>
<br/>
<%= link_to 'Full profile', person_path(@person) %>
