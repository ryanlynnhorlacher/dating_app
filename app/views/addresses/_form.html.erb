

<%= form_for [@person, @address] do |f| %>
  <%= f.label :street_address %>
  <%= f.text_field :street_address, required: true %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.select :state, %w(AK AL AR AZ CA CO CT DC DE FL GA HI IA ID IL IN KS KY LA MA MD ME MI MN MO MS MT NC ND NE NH NJ NM NV NY OH OK OR PA RI SC SD TN TX UT VA VT WA WI WV WY), required: true %>

  <%= f.label :zip %>
  <%= f.number_field :zip, required: true %>

  <%= f.submit %>
<% end %>

<%= link_to "Person profile", person_path(@person) %>
