
<%= form_for [@person, @hobbies] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <br />
  <%= f.label :description %>
  <%= f.text_field :description, required: true %>
  
  <br />
  <%= f.label :person_id %>
  <%= f.text_field :person_id, required: true %>  

  <br />
  <%= f.label :created_at %>
  <%= f.text_field :created_at, required: true %>  

  <br />
  <%= f.label :updated_at %>
  <%= f.text_field :updated_at, required: true %>


  <br />
  <%= f.submit %>
<% end %>