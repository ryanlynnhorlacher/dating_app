<h1> <%= @hobby.name %> </h1>

<!-- Description -->
<p> Description: <%= @hobby.description %> </p>
<% if @person == Person.user %>
	<%= link_to "Edit" , edit_person_hobby_path(@person, @hobby) %>
	<%= link_to 'Delete', person_hobby_path(@person, @hobby), method: :delete, data: {confirm: 'REALLY?!?!!? YOU SURE ABOUT THIS???'} %>
<% end %>
<br>
<%= link_to "All hobbies", person_hobbies_path(@person) %>

