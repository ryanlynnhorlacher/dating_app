<% if @person.errors.any? %>
  <ul>
    <% @person.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <!-- <input type='text' name='person[name]' /> -->

  <br />
  <%= f.label :age %>
  <%= f.number_field :age %>
  <!-- <input type='number' name='person[age]' /> -->

  <br />
  <%= f.label :gender %>
  <%= f.select :gender, ['Male','Female','Transgender'] %>
  <!-- <input type='text' name='person[gender]' /> -->

  <br />
  <%= f.label :hair_color %>
  <%= f.select :hair_color, [9,0] %>

  <br />
  <%= f.label :eye_color %>
  <%= f.select :eye_color, [3,5] %>

  <br />
  <%= f.label :weight %>
  <%= f.number_field :weight %>

  <br />
  <%= f.label :height %>
  <%= f.number_field :height %>  


  <br />
  <%= f.submit %>
<% end %>