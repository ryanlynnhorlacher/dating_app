<h1>Search</h1>

<%= form_tag("/search", method: "get") do %>
	<%= label_tag(:name, "Name") %>
	<%= text_field_tag :name, params[:name] %>
	<br/>
	<%= label_tag(:age, "Age") %>
	<%= number_field_tag :age, params[:age] %>
	<br/>
	<%= label_tag(:gender, "Gender") %>
	<%= text_field_tag :gender, params[:gender] %>
	<br/>
	<%= label_tag(:eye_color, "Eye Color") %>
	<%= text_field_tag :eye_color, params[:eye_color] %>
	<br/>
	<%= label_tag(:hair_color, "Hair Color") %>
	<%= text_field_tag :hair_color, params[:hair_color] %>
	<br/>
	<%= label_tag(:weight, "Weight") %>
	<%= number_field_tag :weight, params[:weight] %>
	<br/>
	<%= label_tag(:height, "Height (inches)") %>
	<%= number_field_tag :height, params[:height] %>
	<br/>
	<%= submit_tag "Search", :name => nil %>
<% end %>


<% if @search.empty? == false %>
	<% @search.each do |result| %>
		<% if result != Person.user %>
		<%= link_to result.name, person_path(result)%>
		<br>
		<% end %>
	<% end %>
	<% @search = [] %>
<% end %>

<%= link_to 'All people', people_path %>
